@{
}
@model CarGallery.Models.Carro

<h1>Detalhes do @Model.Nome </h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <!-- <dt class="col-sm-2">
          arroba Html.DisplayNameFor(model => model.DescricaoCurta)
        </dt> -->
        
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoCurta)
        </dd>

        <dt class="col-sm-2">
            Descrição Longa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoLonga)
        </dd>

        <dt class="col-sm-2">
            Fabricação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fabricacao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Imagem" alt="Imagem do Carro" />
        </dd>
        

    </dl>
</div>
