@{
}
<div class="conteiner text-center">
    <div class="row">
        @foreach (Carro item in ViewBag.Carros)
        {
            <div class="card" style="width: 18rem;">
                <img src="@item.Imagem" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">@item.DescricaoCurta</p>
                    <p class="card-text">@item.DescricaoLonga</p>
                    <a href="/Carro/Detail/@item.Id" class="btn btn-primary">Ver detalhes</a>
                    <div class="detalhes-carro" id="detalhesCarro_@item.Id" style="display: none;">
                        <p class="card-text">@item.DescricaoLonga</p>
                    </div>
                </div>
            </div>


        }
    </div>
</div>
